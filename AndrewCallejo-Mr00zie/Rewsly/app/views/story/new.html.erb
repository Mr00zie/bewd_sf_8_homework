<h2>Add a New Story</h2>

<%= form_for :story, url: story_index_path do |f| %> 
<!-- story_index_path = 'story/' to action "create" -->
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </p>
 
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>

  <p>
    <%= f.submit "Add a new Story" %>
  </p>

<% end %>